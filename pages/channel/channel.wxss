.head_nav{
    width: 100%;
    height: 80rpx;
    margin: 0 auto;
    zoom: 1;
    line-height: 80rpx;
    background-color: #23212c;
}
.head_nav_fixed{
    position: fixed;
    top: 0;left: 0;
    z-index: 10;
}
.head_nav:after{
    content: '';
    display: block;
    clear: both;
}
.head_nav view:nth-child(1){
	margin-left: 30rpx;
}
.head_nav view{
    float: left;
    margin-right: 30rpx;
    color: #fff;
    font-size: 32rpx;
}
.head_nav icon{
    float: right;
    height: 80rpx;
    line-height: 115rpx;
	margin-right: 30rpx;
}
.head_nav .action{
    color: #e9346f;
}

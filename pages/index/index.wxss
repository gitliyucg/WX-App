/**index.wxss**/
.head_nav{
    width: 100%;
    height: 80rpx;
    margin: 0 auto;
    zoom: 1;
    line-height: 80rpx;
    background-color: #23212c;
}
.head_nav_fixed{
    position: fixed;
    top: 0;left: 0;
    z-index: 10;
}
.head_nav:after{
    content: '';
    display: block;
    clear: both;
}
.head_nav view:nth-child(1){
    margin-left: 30rpx;
}
.head_nav view{
    float: left;
    margin-right: 30rpx;
    color: #fff;
    font-size: 32rpx;
}
.head_nav icon{
    float: right;
    height: 80rpx;
    line-height: 115rpx;
    margin-right: 30rpx;
}
.head_nav .action{
    color: #e9346f;
}
.marg-top{
    margin-top: 80rpx;
}
swiper{
    width: 100%;
}
swiper swiper-item{
    width: 100%;
}
swiper swiper-item image{
    width: 100%;
}
.content-video{
    width: 96%;
    margin: 0 auto;
}
.title{
    padding: 10rpx 0;
}
.title icon{
    font-size: 32rpx;
    color: #e9346f;
    margin-left: 5px;
}
.title icon image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: bottom;
    margin-right: 5px;
}
.title:after{
    content: '';
    display: block;
    clear: both
}
.title .more{
    color: rgb(185, 184, 184);
    display: inline-block;
    font-size: 24rpx;
    float: right;
    margin-top: 16rpx;
}
.video-wrap::after{
    content: '';
    display: block;
    clear: both;
}
.video-wrap .video{
    width: 49%;
    height: 300rpx;
    max-height: 300rpx;
    margin-right: 2%;
    float: left;
}
.video-wrap .video:nth-child(2n){
    margin-right: 0
}
.video-wrap .video .video-img{
    width: 100%;
    height: 180rpx;
    overflow: hidden
}
.video-wrap .video .video-img image{
    width: 100%;
}
.video-wrap .video .yan-wrap{
    text-align: right
}
.video-wrap .video .yan-wrap image{
    width: 45rpx;
    height: 20rpx;
    vertical-align: middle;
}
.video-wrap .video .yan-wrap .num{
    height: 30rpx;
    text-align: right;
    color: #fff;
    font-size: 20rpx;
    display: inline-block;
    width: 50rpx;
}
.video-wrap .video .content-title{
    width: 100%;
    font-size: 24rpx;
    height: 62rpx;
    /* line-height: 30rpx; */
    color: #fff;
    overflow: hidden;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}

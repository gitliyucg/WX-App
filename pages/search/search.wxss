.search-wrap{
    width: 95%;
    margin: 0 auto;
}
.search-wrap input{
    border: 1px solid #fff;
    border-radius: 30rpx;
    padding: 0 20rpx;
    font-size: 32rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    /* background-color: rgba(255, 255, 255, .5) */
}
.hot{
    font-size: 30rpx;
    padding-bottom: 10rpx;
    border-bottom: 1px solid #fff;
    color: #fff;
    margin-top: 40rpx;
}
.label-wrap{
    margin-top: 10rpx;
}
.label-wrap text{
    display: inline-block;
    border: 1px solid #fff;
    padding: 10rpx;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
    font-size: 28rpx;
    color: #fff;
    margin-left: 40rpx;
}